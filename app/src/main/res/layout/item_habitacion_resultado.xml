<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    android:layout_marginBottom="16dp"
    app:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- INICIO DE LA CORRECCIÓN -->
        <ImageView
            android:id="@+id/iv_habitacion_imagen_resultado"
            android:layout_width="match_parent"
            android:layout_height="180dp" 
            android:scaleType="centerCrop"
            android:src="@drawable/ic_hotel_placeholder" 
            android:contentDescription="Imagen de la habitación" />
        <!-- FIN DE LA CORRECCIÓN -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="top">

                <TextView
                    android:id="@+id/tv_habitacion_nombre_resultado"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#333333"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginEnd="8dp"
                    tools:text="Suite Deluxe con Vistas al Mar" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="end">
                    <TextView
                        android:id="@+id/tv_habitacion_precio_resultado"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#333333"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        tools:text="250€" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="/ noche"
                        android:textColor="#666666"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_servicios_iconos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp"
                android:gravity="start">

                <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:gravity="center_vertical" android:layout_marginEnd="16dp">
                    <ImageView android:src="@drawable/ic_home" android:layout_width="18dp" android:layout_height="18dp" app:tint="#666666" android:layout_marginEnd="4dp"/>
                    <TextView android:text="Wifi" android:textSize="12sp" android:textColor="#666666" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:gravity="center_vertical" android:layout_marginEnd="16dp">
                    <ImageView android:src="@drawable/ic_home" android:layout_width="18dp" android:layout_height="18dp" app:tint="#666666" android:layout_marginEnd="4dp"/>
                    <TextView android:text="A/A" android:textSize="12sp" android:textColor="#666666" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_ver_detalles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ver Detalles"
                android:layout_marginTop="16dp"
                app:cornerRadius="8dp" />

        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>